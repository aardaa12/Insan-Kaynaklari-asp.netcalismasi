@model İnsan_Kaynakları.Models.Aday

@{
    ViewData["Title"] = "Aday Düzenle - " + Model.Ad;
}

<h1>Aday Düzenle</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />
            <input asp-for="UygulamaZamanı" type="hidden" />
            <input asp-for="Fotourl" type="hidden" />

            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Ad" class="form-label">Ad Soyad</label>
                        <input asp-for="Ad" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mail" class="form-label">Email</label>
                        <input asp-for="Mail" type="email" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Numara" class="form-label">Telefon</label>
                        <input asp-for="Numara" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Pozisyon" class="form-label">Başvurulan Pozisyon</label>
                        <input asp-for="Pozisyon" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Deneyim" class="form-label">Deneyim (Yıl)</label>
                        <input asp-for="Deneyim" type="number" class="form-control" min="0" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Eğitim" class="form-label">Eğitim</label>
                        <input asp-for="Eğitim" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Yetenek" class="form-label">Yetenekler</label>
                        <textarea asp-for="Yetenek" class="form-control" rows="3" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Statü" class="form-label">Durum</label>
                        <select asp-for="Statü" class="form-select" required>
                            <option value="Yeni Başvuru">Yeni Başvuru</option>
                            <option value="Değerlendiriliyor">Değerlendiriliyor</option>
                            <option value="Mülakata Çağrıldı">Mülakata Çağrıldı</option>
                            <option value="İşe Alındı">İşe Alındı</option>
                            <option value="Reddedildi">Reddedildi</option>
                        </select>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Güncelle</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>